{
  "name": "superglue",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "npm@11.0.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "test": "turbo run test",
    "test:unit": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:evals": "npx tsx eval/tool-evals/index.ts",
    "test:integration-evals": "npx tsx eval/integration-evals/index.ts",
    "test:all": "npm run test:unit && npm run test:integration",
    "lint": "npx prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,md,mdx}\" --ignore-path .gitignore",
    "lint:fix": "npx prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md,mdx}\" --ignore-path .gitignore",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "type-check-strict": "turbo run type-check-strict"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "d3-time": "^3.1.0",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "posthog-js": "^1.354.0",
    "superglue": "github:superglue-ai/superglue#main",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "@types/node": "^20.17.19",
    "lefthook": "^2.0.3",
    "mcp-remote": "^0.1.5",
    "prettier": "3.7.4",
    "secretlint": "^11.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "turbo": "^2.7.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "prettier": {
    "printWidth": 100
  },
  "overrides": {
    "fast-xml-parser": "^5.3.7"
  }
}
